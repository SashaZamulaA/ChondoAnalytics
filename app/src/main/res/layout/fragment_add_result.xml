<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="2dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:elevation="2dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/achievements"
                app:layout_collapseMode="parallax" />

            <!--<androidx.appcompat.widget.Toolbar-->
                <!--android:id="@+id/toolbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="?attr/actionBarSize"-->
                <!--android:elevation="2dp"-->
                <!--app:layout_collapseMode="pin"-->

                <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />-->

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/result_fab_confirm_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/link_color"
        android:clickable="true"
        app:srcCompat="@drawable/ic_check_black_24dp"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--MAIN CARD INFO-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="@dimen/space_16"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintWidth_max="@dimen/card_width"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="@dimen/space8"
                android:elevation="2dp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintWidth_max="@dimen/card_width"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <!--Город-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginStart="@dimen/space_16"
                    android:layout_marginEnd="@dimen/space_16"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextStyle_SubHeader_Accent"
                        android:layout_marginBottom="@dimen/space_4"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="@string/city" />

                    <Spinner
                        android:id="@+id/registration_city"
                        style="@style/TextStyle_Body2_Primary_Dark"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_20" />

                    <View
                        style="@style/AppTheme.HorizontalSpinnerDivider"
                        android:layout_marginTop="@dimen/space_8" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/space8"
                android:elevation="2dp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintWidth_default="spread"
                app:layout_constraintWidth_max="@dimen/card_width"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/price_scu_barcode_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/introduction"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/introdaction"
                                android:text="@string/introdaction"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/introduction_edittext"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="@dimen/space8"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/result_time_street"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/streat_time"
                                android:text="@string/streat_time"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/result_time_street_edit_text"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/one_day_seminar"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/one_day_seminar"
                                android:text="@string/one_day_seminar"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/one_day_seminar_edittext"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="@dimen/space8"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/result_approach"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/approach"
                                android:text="@string/approach"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/result_approach_edit_text"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/two_day_seminar"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/two_day_seminar"
                                android:text="@string/two_day_seminar"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/two_day_seminar_edittext"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="@dimen/space8"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ressult_lectures_on_street"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/lecture_on_streat"
                                android:text="@string/lecture_on_streat"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/result_lectures_on_street_edittext"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space8"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/day21_seminar"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/day21_seminar"
                                android:text="@string/day21_seminar"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/day21_seminar_edittext"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="@dimen/space8"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/ressult_lectures_in_center"
                                style="@style/TextStyle_Caption_Dark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/touchable_list_container"
                                android:hint="@string/lecture_in_centre"
                                android:text="@string/lecture_in_centre"
                                android:textColorHint="@color/text_secondary_dark"
                                android:textDirection="inherit">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/result_lectures_in_center_edittext"
                                    style="@style/TextStyle_Body2_Primary_Dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/negative_padding_edittext"
                                    android:layout_marginEnd="@dimen/negative_padding_edittext"
                                    android:ellipsize="end"
                                    android:focusable="true"
                                    android:gravity="start"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:nextFocusDown="@+id/et_sku"
                                    android:nextFocusForward="@+id/et_sku"
                                    android:selectAllOnFocus="true"
                                    android:textAlignment="gravity"
                                    android:textDirection="inherit"
                                    app:backgroundTint="@color/divider_spinner_color"
                                    tools:text="10.00" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content"-->
            <!--app:layout_anchor="@id/appbar"-->
            <!--app:layout_anchorGravity="bottom|right|end"-->
            <!--android:src="@drawable/ic_add_gray"-->
            <!--android:layout_margin="@dimen/fab_margin"-->
            <!--android:clickable="true"/>-->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>