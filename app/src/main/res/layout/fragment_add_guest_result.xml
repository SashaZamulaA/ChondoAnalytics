<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ind_read_dp4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/number_of_telephone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <TextView
                    android:id="@+id/ind_read_dp7"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/birthday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ind_read_dp4" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/guest_phone"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/ind_read_dp4"
                    app:layout_constraintEnd_toEndOf="@+id/guest_time_nwet"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guest_time_nwet"
                    app:layout_constraintTop_toTopOf="@+id/ind_read_dp4"
                    app:layout_constraintVertical_bias="0.49" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_DP_kor_edittext3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="@string/lector"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_textViewDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guest_textViewDate"
                    app:layout_constraintTop_toTopOf="@+id/guest_textViewDate" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_DP_kor_edittext4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="@string/lector"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDate2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewDate2"
                    app:layout_constraintTop_toTopOf="@+id/textViewDate2" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_DP_kor_edittext5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="@string/lector"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDate3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewDate2"
                    app:layout_constraintTop_toTopOf="@+id/textViewDate3" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_DP_kor_edittext6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="@string/lector"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDate4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewDate2"
                    app:layout_constraintTop_toTopOf="@+id/textViewDate4" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_DP_kor_edittext7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="@string/lector"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDate5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewDate2"
                    app:layout_constraintTop_toTopOf="@+id/textViewDate5" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_DP_kor_edittext8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="@string/lector"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDate6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textViewDate6"
                    app:layout_constraintTop_toTopOf="@+id/textViewDate6" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/guest_name"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/result_mobilisation_edittext"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/textView38"
                    app:layout_constraintEnd_toEndOf="@+id/guest_birthday"
                    app:layout_constraintStart_toStartOf="@+id/guest_birthday"
                    app:layout_constraintTop_toTopOf="@+id/textView38" />


                <!--Город-->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/guest_birthday"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="@dimen/body2_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/ind_read_dp7"
                    app:layout_constraintEnd_toEndOf="@+id/guest_phone"
                    app:layout_constraintStart_toStartOf="@+id/guest_phone"
                    app:layout_constraintTop_toTopOf="@+id/ind_read_dp7" />

                <Spinner
                    android:id="@+id/guest_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <View
                    android:id="@+id/view5"
                    style="@style/AppTheme.HorizontalSpinnerDivider"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_city" />

                <TextView
                    android:id="@+id/textView15"
                    style="@style/TextStyle_SubHeader_Accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="City"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_name" />


                <TextView
                    android:id="@+id/textView19"
                    style="@style/TextStyle_SubHeader_Accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Add information:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_nwet" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ind_read_dp7" />

                <Button

                    android:id="@+id/guest_time_intro"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="140dp"
                    android:background="@drawable/button_green_bordered"
                    android:text="@string/data"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="@dimen/space_12"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_intro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guest_intro" />

                <Button

                    android:id="@+id/guest_time_one_day"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_green_bordered"
                    android:text="@string/data"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="@dimen/space_12"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_oneDay"
                    app:layout_constraintEnd_toEndOf="@+id/guest_time_intro"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guest_time_intro"
                    app:layout_constraintTop_toTopOf="@+id/guest_oneDay"
                    app:layout_constraintVertical_bias="0.0" />

                <Button

                    android:id="@+id/guest_time_two_day"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_green_bordered"
                    android:text="@string/data"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="@dimen/space_12"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_twoDay"
                    app:layout_constraintEnd_toEndOf="@+id/guest_time_one_day"
                    app:layout_constraintStart_toStartOf="@+id/guest_time_one_day"
                    app:layout_constraintTop_toTopOf="@+id/guest_twoDay" />

                <Button

                    android:id="@+id/guest_time_act"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_green_bordered"
                    android:text="@string/data"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="@dimen/space_12"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_act"
                    app:layout_constraintEnd_toEndOf="@+id/guest_time_two_day"
                    app:layout_constraintStart_toStartOf="@+id/guest_time_two_day"
                    app:layout_constraintTop_toTopOf="@+id/guest_act" />

                <Button

                    android:id="@+id/guest_time_21_day"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_green_bordered"
                    android:text="@string/data"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="@dimen/space_12"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_21"
                    app:layout_constraintEnd_toEndOf="@+id/guest_time_act"
                    app:layout_constraintStart_toStartOf="@+id/guest_time_act"
                    app:layout_constraintTop_toTopOf="@+id/guest_21"
                    app:layout_constraintVertical_bias="0.0" />

                <Button

                    android:id="@+id/guest_time_nwet"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_green_bordered"
                    android:text="@string/data"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="@dimen/space_12"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_nwet"
                    app:layout_constraintEnd_toEndOf="@+id/guest_time_21_day"
                    app:layout_constraintStart_toStartOf="@+id/guest_time_21_day"
                    app:layout_constraintTop_toTopOf="@+id/guest_nwet" />

                <TextView
                    android:id="@+id/guest_textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="21 mart"
                    android:textColor="@color/braun"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_time_intro"
                    app:layout_constraintStart_toEndOf="@+id/guest_time_intro"
                    app:layout_constraintTop_toTopOf="@+id/guest_time_intro" />

                <TextView
                    android:id="@+id/textViewDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 mart"
                    android:textColor="@color/braun"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_time_one_day"
                    app:layout_constraintEnd_toEndOf="@+id/guest_textViewDate"
                    app:layout_constraintStart_toStartOf="@+id/guest_textViewDate"
                    app:layout_constraintTop_toTopOf="@+id/guest_time_one_day" />

                <TextView
                    android:id="@+id/textViewDate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 mart"
                    android:textColor="@color/braun"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_time_two_day"
                    app:layout_constraintEnd_toEndOf="@+id/textViewDate2"
                    app:layout_constraintStart_toStartOf="@+id/textViewDate2"
                    app:layout_constraintTop_toTopOf="@+id/guest_time_two_day" />

                <TextView
                    android:id="@+id/textViewDate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 mart"
                    android:textColor="@color/braun"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_time_act"
                    app:layout_constraintEnd_toEndOf="@+id/textViewDate3"
                    app:layout_constraintStart_toStartOf="@+id/textViewDate3"
                    app:layout_constraintTop_toTopOf="@+id/guest_time_act" />

                <TextView
                    android:id="@+id/textViewDate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 mart"
                    android:textColor="@color/braun"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_time_21_day"
                    app:layout_constraintEnd_toEndOf="@+id/textViewDate4"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/textViewDate4"
                    app:layout_constraintTop_toTopOf="@+id/guest_time_21_day" />

                <TextView
                    android:id="@+id/textViewDate6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 mart"
                    android:textColor="@color/braun"
                    app:layout_constraintBottom_toBottomOf="@+id/guest_time_nwet"
                    app:layout_constraintEnd_toEndOf="@+id/textViewDate5"
                    app:layout_constraintStart_toStartOf="@+id/textViewDate5"
                    app:layout_constraintTop_toTopOf="@+id/guest_time_nwet" />

                <CheckBox
                    android:id="@+id/guest_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/introdaction"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_city" />

                <CheckBox
                    android:id="@+id/guest_oneDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/one_day_seminar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_intro" />

                <CheckBox
                    android:id="@+id/guest_twoDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/two_day_seminar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_oneDay" />

                <CheckBox
                    android:id="@+id/guest_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/actionizer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_twoDay" />

                <CheckBox
                    android:id="@+id/guest_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/day21_seminar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_twoDay" />

                <CheckBox
                    android:id="@+id/guest_nwet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/nwet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guest_21" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/guest_fab_confirm_goal"
                style="@style/FloatingActionButton"
                app:backgroundTint="@color/link_color"
                app:srcCompat="@drawable/ic_check_black_24dp" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>