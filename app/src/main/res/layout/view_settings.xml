<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:padding="0dp"
        app:contentInsetEnd="0dp"
        android:elevation="@dimen/common_elevation"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/space4"
                android:background="@drawable/button_ripple_circle_green"
                android:padding="@dimen/icon_button_padding"
                android:src="@drawable/ic_arrow_back_white" />
            <TextView
                android:id="@+id/tv_title"
                style="@style/TextStyle_Title_White"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="56dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="Settings" />
            <Button
                android:id="@+id/button_save_settings"
                style="@style/ButtonToolbarWithStartEndPadding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/save" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <!--OWNER-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/parent_margin_edge"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/parent_margin_edge"
            android:layout_marginEnd="@dimen/parent_margin_edge"
            android:layout_marginBottom="@dimen/parent_margin_edge"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_SubHeader_Accent"
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginBottom="@dimen/space_4"
                android:text="@string/owner" />

            <LinearLayout
                android:id="@+id/represent_as_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/parent_margin_edge"
                android:layout_marginBottom="@dimen/parent_margin_edge"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/selectphoto_button_register"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/circle_decorator"
                        android:text="Select photo"
                        android:textSize="10dp"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/selectphoto_imageview_register"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignEnd="@+id/selectphoto_button_register"
                        android:layout_marginEnd="0dp"
                        app:civ_border_color="@color/blue"
                        app:civ_border_width="2dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_16"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_choose_photo"
                        style="@style/ButtonTransparent"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/space_8"
                        android:background="@drawable/button_background_white"
                        android:drawableStart="@drawable/ic_choose_photo"
                        android:text="@string/choose_photo" />

                    <Button
                        android:id="@+id/btn_take_photo"
                        style="@style/ButtonTransparent"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_background_white"
                        android:drawableStart="@drawable/ic_take_photo"
                        android:text="@string/take_photo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/owner_name" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    android:id="@+id/settings_owner_name"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sasha" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/mobile" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    android:id="@+id/settings_owner_phone"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="+0933506836" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/country" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <TextView
                    android:id="@+id/settings_owner_city"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kiev" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/password" />

                <TextView
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    android:id="@+id/settings_owner_password"
                    style="@style/TextStyle_Body2_Primary_Dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="******" />

            </LinearLayout>

