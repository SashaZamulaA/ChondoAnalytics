<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aleksandr.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/analytics"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/analytics"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateUnchanged|adjustResize"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.login.RegistrationActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.chondo_result.ResultM3AView"
        android:windowSoftInputMode="stateUnchanged|adjustResize"/>
        <activity android:name=".ui.hdh.HDHView" />
        <activity android:name=".ui.add_task.NewNoteView"/>
        <activity android:name=".ui.settings.SettingsView"/>

        <activity
            android:name=".TestForVisual"
            android:exported="true" />
        <activity android:name=".ui.add_task.RecyclerActivity">


        </activity>
    </application>

</manifest>